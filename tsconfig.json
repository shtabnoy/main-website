{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./packages",
    "paths": {
      "*": ["*", "client-app-1/*", "client-app-2/*", "server-app/*"]
    }
  },
  "include": [
    "packages/server-app/src",
    "packages/client-app-1/src",
    "packages/client-app-2/src"
  ],
  "references": [
    { "path": "packages/server-app" },
    { "path": "packages/client-app-1" },
    { "path": "packages/client-app-2" }
  ]
}
